<configuration>
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <debug>false</debug>
        <encoder>
            <pattern>[%-5level] [%d{dd/MM/yyyy HH:mm:ss.SSS}] [%15.15thread] [%-30.30logger{30}] - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>